<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    tools:context=".frg_common">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:alignmentMode="alignMargins"
            android:layout_centerInParent="true"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it1" />



            <ImageButton
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it2"/>

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it3"/>
            <ImageButton
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it4"/>


            <ImageButton
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it5"/>
            <ImageButton
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it6"/>
            <ImageButton
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it7"/>
            <ImageButton
                android:id="@+id/b8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/it8"/>
            <ImageButton
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/itt0"/>



        </GridLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/full"/>
    </RelativeLayout>

</LinearLayout>
